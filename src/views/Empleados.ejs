<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
    </div>
    <div class="col-md-5">
      <div class="card-body">

        <form action="/add_empleado" method="POST">
         <div class="mb-4">
          <input
            type="text"
            name="Identidad"
            placeholder="Identidad"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="text"
            name="PNombre"
            placeholder="Primer Nombre"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="SNombre"
            placeholder="Segundo Nombre"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="PApellido"
            placeholder="Primer Apellido"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="SApellido"
            placeholder="Phone"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="Edad"
            placeholder="Edad"
            class="form-control mb-2"
          />
          <input
            type="date"
            name="Nacimiento"
            placeholder="2023-12-31"
            class="form-control mb-2"
          />
          <label for="genero">Seleccione su g√©nero:</label>
        <select id="genero" name="genero" class="form-select mb-3">
            <option value="1" class="form-control mb-2" >Hombre</option>
            <option value="2" class="form-control mb-2" >Mujer</option>
         </select>    
            <input
            type="text"
            name="Telefono"
            placeholder="Telefono"
            class="form-control mb-2"
            />
            <input
            type="text"
            name="Ciudad"
            placeholder="Ciudad"
            class="form-control mb-2"
            />
            <input
            type="text"
            name="Colonia"
            placeholder="Colonia"
            class="form-control mb-2"
            />
            <input
            type="text"
            name="Calle"
            placeholder="Calle"
            class="form-control mb-2"
            />
            <label for="cargo">Seleccione su Cargo:</label>
            <select id="cargo" name="cargo" class="form-select mb-3">
                <option value="1" class="form-control mb-2" >Secretaria/o</option>
                <option value="2" class="form-control mb-2" >Administrativo</option>
                <option value="3" class="form-control mb-2" >Veterinario</option>
             </select>    
            </div>
        <button type="submit" class="btn btn-info">Crear Empleado</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
