<!-- index.ejs -->
<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h2>Buscar Cliente</h2>

      <!-- Formulario para buscar cliente por número de identidad -->
      <form action="/mascotas" method="GET">
        <label for="identidadInput">Número de Identidad:</label>
        <input
          type="text"
          name="identidad"
          id="identidadInput"
          class="form-control mb-2"
          required
        />
        <button type="submit" class="btn btn-primary">Buscar Cliente</button>
      </form>

      <!-- Mostrar información del cliente si está disponible -->
      <% if (persona) { %>
        <h3>Información del Cliente</h3>
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>ID</td>
              <td>Primer Nombre</td>
              <td>Segundo Nombre</td>
              <td>Primer Apellido</td>
              <td>Segundo Apellido</td>
              <td>Cliente ID</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= persona.personaID %></td>
              <td><%= persona.PrimerNombre %></td>
              <td><%= persona.SegundoNombre %></td>
              <td><%= persona.PrimerApellido %></td>
              <td><%= persona.SegundoApellido %></td>
              <td><%= persona.ClienteID %></td>
            </tr>
          </tbody>
        </table>
      <% } { %>
        <p>INGRESAR MASCOTA.</p>
      <% } %>


    </div>
    <form action="/add_mascotas" method="POST">
    
        <input
          type="text"
          name="Nombre"
          placeholder="Nombre de Mascota"
          class="form-control mb-2"
        />
        
        <input
          type="text"
          name="Edad"
          placeholder="Edad"
          class="form-control mb-2"
        />
        <input
          type="number"
          name="IDdelCliente"
          placeholder="ID del Cliente"
          class="form-control mb-2"
        />
        <label for="genero" >Seleccione su género:</label>
        <select id="genero" name="genero" class="form-select mb-3">
          <option value="1" class="form-control mb-2" >Hembra</option>
          <option value="2" class="form-control mb-2" >Macho</option>
        </select>

         <label for="especie">Seleccione su Especie:</label>
         <select id="especie" name="especie" class="form-select mb-3">
               <option value="1" class="form-control mb-2">Gato</option>
               <option value="2" class="form-control mb-2">Perro</option>
               <option value="3" class="form-control mb-2">Ave</option>
             </select>
             
    
    
      <button type="submit" class="btn btn-info">Registrar Mascota</button>
      </form>
  </div>
</div>

<%- include("partials/_footer") %>
