<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h2>Iniciar Sesión</h2>

      <!-- Formulario para iniciar sesión -->
      <form action="/login" method="post" class="mb-3">
        <label for="email">Email:</label>
        <input type="text" id="email" name="email" class="form-control mb-2" required>

        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" class="form-control mb-2" required>

        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
      </form>

      <!-- Aquí puedes agregar la lógica para mostrar mensajes de éxito/error si es necesario -->
    </div>
  </div>
</div>

<%- include("partials/_footer") %>

